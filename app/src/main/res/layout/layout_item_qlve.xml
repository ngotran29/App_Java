<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="3"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Người đi:"
                    android:textSize="20sp" />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_tennguoidi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="nguodung"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="SĐT:"
                    android:textSize="20sp" />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_sodienthoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sdt"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="23dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nơi đi:"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_noidi_qlv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nơi đi"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">

                <TextView
                    android:layout_width="31dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nơi đến:"
                    android:textSize="20sp" />
                <TextView
                    android:layout_weight="2"
                    android:id="@+id/tv_noiden_qlv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nơi đến"
                    android:textSize="20sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_sua_ve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sửa" />

            <Button
                android:id="@+id/bt_xoa_ve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Xoá" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>